<% content_for :title, "Chat with Bible" %>

<div class="h-screen flex flex-col">
  <!-- Header -->
  <div class="border-b border-gray-200 dark:border-gray-700 p-4 flex items-center">
    <button type="button" class="lg:hidden mr-3 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200" data-drawer-target="logo-sidebar" data-drawer-toggle="logo-sidebar">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
    <h1 class="font-bold text-xl text-gray-800 dark:text-white">Chat with Bible</h1>
  </div>

  <!-- Main content -->
  <div class="flex-1 overflow-y-auto p-4 bg-white dark:bg-gray-800">
    <div class="max-w-3xl mx-auto">
      <!-- New Chat Button (visible on mobile) -->
      <div class="lg:hidden mb-6">
        <%= form_with url: bible_chat_conversations_path(translation: @translation), method: :post, class: "w-full" do |form| %>
          <%= form.hidden_field :message, value: "Hello, I'd like to learn about the Bible." %>
          <%= form.submit "New Chat", class: "w-full py-3 px-4 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg" %>
        <% end %>
      </div>

      <!-- Translation selector -->
      <div class="mb-6">
        <div class="rounded-lg shadow border border-gray-200 dark:border-gray-700 p-4">
          <h2 class="text-lg font-semibold text-gray-800 dark:text-white mb-3">Select Translation</h2>
          <div class="flex flex-wrap gap-2">
            <% @translations.each do |translation| %>
              <%= link_to translation, bible_chat_conversations_path(translation: translation), 
                  class: "px-3 py-1 rounded-lg #{@translation == translation ? 
                  'bg-green-600 text-white' : 
                  'bg-white dark:bg-gray-800 text-gray-800 dark:text-white border border-gray-200 dark:border-gray-700'}" %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Welcome message -->
      <div class="text-center py-8">
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">Welcome to Bible Chat</h2>
        <p class="text-gray-600 dark:text-gray-300 mb-6">Ask questions about the Bible and get AI-powered answers with scripture references.</p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-left max-w-2xl mx-auto mb-8">
          <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
            <h3 class="font-semibold text-gray-800 dark:text-white mb-2">Example questions:</h3>
            <ul class="text-gray-600 dark:text-gray-300 space-y-2">
              <li>"What does the Bible say about love?"</li>
              <li>"Tell me about Noah's ark"</li>
              <li>"Explain the Beatitudes"</li>
              <li>"Who was King David?"</li>
            </ul>
          </div>
          <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
            <h3 class="font-semibold text-gray-800 dark:text-white mb-2">Features:</h3>
            <ul class="text-gray-600 dark:text-gray-300 space-y-2">
              <li>Multiple Bible translations</li>
              <li>Save conversations</li>
              <li>Scripture references</li>
              <li>Theological insights</li>
            </ul>
          </div>
        </div>
        
        <%= form_with url: bible_chat_conversations_path(translation: @translation), method: :post, class: "max-w-md mx-auto" do |form| %>
          <%= form.hidden_field :message, value: "Hello, I'd like to learn about the Bible." %>
          <%= form.submit "Start a New Chat", class: "w-full py-4 px-6 bg-green-600 hover:bg-green-700 text-white text-lg font-medium rounded-lg shadow-md" %>
        <% end %>
      </div>
    </div>
  </div>
</div>