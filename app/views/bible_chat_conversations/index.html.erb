<% content_for :title, "Chat with Bible" %>

<div class="h-[calc(100vh-7.2vh)] flex flex-col">

  <!-- Main content -->
  <div class="flex-1 overflow-y-auto p-4 bg-white dark:bg-black flex items-center justify-center">
    <div class="max-w-3xl w-full">

      <!-- Welcome message -->
      <div class="text-center py-8">
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">Welcome to Bible Chat</h2>
        <p class="text-gray-600 dark:text-gray-300 mb-6">Ask questions about the Bible and get AI-powered answers with scripture references.</p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-left max-w-2xl mx-auto mb-8">
          <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
            <h3 class="font-semibold text-gray-800 dark:text-white mb-2">Example questions:</h3>
            <ul class="text-gray-600 dark:text-gray-300 space-y-2">
              <li>"What does the Bible say about love?"</li>
              <li>"Tell me about Noah's ark"</li>
              <li>"Explain the Beatitudes"</li>
              <li>"Who was King David?"</li>
            </ul>
          </div>
          <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
            <h3 class="font-semibold text-gray-800 dark:text-white mb-2">Features:</h3>
            <ul class="text-gray-600 dark:text-gray-300 space-y-2">
              <li>Multiple Bible translations</li>
              <li>Save conversations</li>
              <li>Scripture references</li>
              <li>Theological insights</li>
            </ul>
          </div>
        </div>
        
        <div class="max-w-md mx-auto">
            <%= form_with url: bible_chat_conversations_path(translation: @translation), 
                            method: :post, 
                            class: "flex flex-col gap-3",
                            data: { controller: "chat-input" } do |form| %>
                <%= form.text_area :message, 
                                placeholder: "Ask a question about the Bible...", 
                                class: "w-full rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-800 dark:text-white p-3 resize-none focus:ring-2 focus:ring-green-500 focus:border-transparent",
                                rows: 2,
                                autofocus: true,
                                data: { 
                                    action: "keydown->chat-input#submitOnEnter input->chat-input#resize",
                                    chat_input_target: "input"
                                } %>
                <div class="text-sm text-gray-500 dark:text-gray-400 text-center">
                Press Enter to start a new chat
                </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>