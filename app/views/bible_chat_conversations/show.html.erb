<% content_for :title, "Chat with Bible - #{@conversation.title}" %>

<div class="h-screen flex flex-col">
  <!-- Header with back button and title -->
  <div class="border-b border-gray-200 dark:border-gray-700 p-4 flex items-center">
    <button type="button" class="lg:hidden mr-3 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200" data-drawer-target="logo-sidebar" data-drawer-toggle="logo-sidebar">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
    <h1 class="font-bold text-xl text-gray-800 dark:text-white truncate flex-1">
      <%= @conversation.title %>
    </h1>
    <div class="flex items-center">
      <div class="relative" data-controller="dropdown">
        <button data-action="click->dropdown#toggle" class="p-2 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
          </svg>
        </button>
        <div data-dropdown-target="menu" class="absolute right-0 mt-2 w-48 bg-white dark:bg-gray-800 rounded-md shadow-lg py-1 z-10 hidden">
          <%= button_to bible_chat_conversation_path(@conversation), 
              method: :delete, 
              class: "w-full text-left px-4 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-gray-100 dark:hover:bg-gray-700",
              form: { data: { turbo_confirm: "Are you sure you want to delete this conversation?" } } do %>
            Delete conversation
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Translation selector -->
  <div class="border-b border-gray-200 dark:border-gray-700 p-4">
    <div class="flex flex-wrap gap-2">
      <% @translations.each do |translation| %>
        <%= link_to translation, 
            bible_chat_conversation_path(@conversation, translation: translation), 
            class: "px-3 py-1 rounded-lg text-sm #{@translation == translation ? 
            'bg-green-600 text-white' : 
            'bg-white dark:bg-gray-800 text-gray-800 dark:text-white border border-gray-200 dark:border-gray-700'}" %>
      <% end %>
    </div>
  </div>

  <!-- Chat messages -->
  <div class="flex-1 overflow-y-auto p-4 bg-white dark:bg-gray-800" data-controller="bible-chat" data-bible-chat-target="messages">
    <div id="bible_chat_messages" class="space-y-4 max-w-3xl mx-auto">
      <% if @messages.empty? %>
        <div class="text-center text-gray-500 dark:text-gray-400 py-8">
          <p>Ask a question about the Bible to get started.</p>
          <p class="text-sm mt-2">For example: "What does the Bible say about love?" or "Tell me about Noah's ark"</p>
        </div>
      <% else %>
        <%= render partial: "bible_chats/bible_chat_message", collection: @messages %>
      <% end %>
    </div>
  </div>

    <!-- Message input -->
  <div class="border-t border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 p-4">
    <div class="max-w-3xl mx-auto">
      <%= form_with model: BibleChatMessage.new, 
          url: bible_chat_conversation_bible_chat_messages_path(@conversation, translation: @translation), 
          class: "flex items-center gap-2", 
          data: { bible_chat_target: "form" }, 
          id: "new_bible_chat_message" do |form| %>
        <div class="flex-grow relative">
          <%= form.text_area :content, 
              class: "w-full rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-800 dark:text-white p-3 pr-10 focus:ring-2 focus:ring-green-500 focus:border-transparent resize-none",
              placeholder: "Message Bible Chat...", 
              rows: 1,
              data: { 
                bible_chat_target: "input",
                action: "keydown->bible-chat#handleKeydown input->bible-chat#resize"
              } %>
          <div class="absolute right-3 bottom-3 text-gray-400">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5" />
            </svg>
          </div>
        </div>
        <%= form.submit "Send", 
            class: "bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg" %>
      <% end %>
    </div>
  </div>
</div> 