                     <%= link_to bible_chat_conversations_path(translation: @translation || "KJV"), 
                        class: "w-full flex items-center p-2 text-sm text-gray-700 dark:text-gray-200 hover:bg-green-50 dark:hover:bg-green-900/10 rounded-lg group cursor-pointer" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
