            <%= link_to bible_chat_conversations_path, 
               class: "flex items-center p-2 gap-3 rounded-lg #{controller_name == 'bible_chat_conversations' || controller_name == 'bible_chats' ? 'text-green-600 bg-green-50 dark:bg-green-900/10 dark:text-green-500' : 'text-gray-900 dark:text-white hover:bg-green-50 dark:hover:bg-green-900/10 hover:text-green-600 dark:hover:text-green-500'} group",
