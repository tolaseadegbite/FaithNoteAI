<aside id="logo-sidebar" class="fixed md:top-0 top-16 left-0 z-40 w-64 h-screen md:pt-20 pt-4 transition-transform -translate-x-full bg-white border-r border-gray-200 sm:translate-x-0 dark:bg-black dark:border-gray-700" aria-label="Sidebar">
   <div class="h-full px-3 pb-4 overflow-y-auto bg-white dark:bg-black flex flex-col">
      <%= link_to new_note_path, class: "hidden md:flex items-center justify-center gap-2 bg-green-600 hover:bg-green-700 text-white dark:bg-green-700 dark:hover:bg-green-800 rounded-lg shadow-md p-3 mb-5 font-medium transition-colors duration-200" do %>
         <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
         </svg>
      
         Add new note
      <% end %>

      <ul class="space-y-2 font-medium flex-grow overflow-hidden">
         <li>
            <%= link_to notes_path, 
                class: "flex items-center p-2 gap-3 rounded-lg #{current_page?(notes_path) ? 'text-green-600 bg-green-50 dark:bg-green-900/10 dark:text-green-500' : 'text-gray-900 dark:text-white hover:bg-green-50 dark:hover:bg-green-900/10 hover:text-green-600 dark:hover:text-green-500'} group" do %>
               <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" 
                    class="shrink-0 w-5 h-5 transition duration-75 #{current_page?(notes_path) ? 'text-green-600 dark:text-green-500' : 'text-gray-500 dark:text-gray-400 group-hover:text-green-600 dark:group-hover:text-green-500'}">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 12h16.5m-16.5 3.75h16.5M3.75 19.5h16.5M5.625 4.5h12.75a1.875 1.875 0 0 1 0 3.75H5.625a1.875 1.875 0 0 1 0-3.75Z" />
               </svg>
               Notes
            <% end %>
         </li>
         <li>
            <%= link_to "#", 
                class: "flex items-center p-2 gap-3 rounded-lg #{current_page?('#') ? 'text-green-600 bg-green-50 dark:bg-green-900/10 dark:text-green-500' : 'text-gray-900 dark:text-white hover:bg-green-50 dark:hover:bg-green-900/10 hover:text-green-600 dark:hover:text-green-500'} group" do %>
               <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" 
                    class="shrink-0 w-5 h-5 transition duration-75 #{current_page?('#') ? 'text-green-600 dark:text-green-500' : 'text-gray-500 dark:text-gray-400 group-hover:text-green-600 dark:group-hover:text-green-500'}">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6A2.25 2.25 0 0 1 6 3.75h2.25A2.25 2.25 0 0 1 10.5 6v2.25a2.25 2.25 0 0 1-2.25 2.25H6a2.25 2.25 0 0 1-2.25-2.25V6ZM3.75 15.75A2.25 2.25 0 0 1 6 13.5h2.25a2.25 2.25 0 0 1 2.25 2.25V18a2.25 2.25 0 0 1-2.25 2.25H6A2.25 2.25 0 0 1 3.75 18v-2.25ZM13.5 6a2.25 2.25 0 0 1 2.25-2.25H18A2.25 2.25 0 0 1 20.25 6v2.25A2.25 2.25 0 0 1 18 10.5h-2.25a2.25 2.25 0 0 1-2.25-2.25V6ZM13.5 15.75a2.25 2.25 0 0 1 2.25-2.25H18a2.25 2.25 0 0 1 2.25 2.25V18A2.25 2.25 0 0 1 18 20.25h-2.25A2.25 2.25 0 0 1 13.5 18v-2.25Z" />
               </svg>
               Categories
            <% end %>
         </li>
         <li>
            <%= link_to "#", 
                class: "flex items-center p-2 gap-3 rounded-lg #{current_page?('#') ? 'text-green-600 bg-green-50 dark:bg-green-900/10 dark:text-green-500' : 'text-gray-900 dark:text-white hover:bg-green-50 dark:hover:bg-green-900/10 hover:text-green-600 dark:hover:text-green-500'} group" do %>
               <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" 
                    class="shrink-0 w-5 h-5 transition duration-75 #{current_page?('#') ? 'text-green-600 dark:text-green-500' : 'text-gray-500 dark:text-gray-400 group-hover:text-green-600 dark:group-hover:text-green-500'}">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.098 19.902a3.75 3.75 0 0 0 5.304 0l6.401-6.402M6.75 21A3.75 3.75 0 0 1 3 17.25V4.125C3 3.504 3.504 3 4.125 3h5.25c.621 0 1.125.504 1.125 1.125v4.072M6.75 21a3.75 3.75 0 0 0 3.75-3.75V8.197M6.75 21h13.125c.621 0 1.125-.504 1.125-1.125v-5.25c0-.621-.504-1.125-1.125-1.125h-4.072M10.5 8.197l2.88-2.88c.438-.439 1.15-.439 1.59 0l3.712 3.713c.44.44.44 1.152 0 1.59l-2.879 2.88M6.75 17.25h.008v.008H6.75v-.008Z" />
               </svg>
               Tags
            <% end %>
         </li>
         <li>
            <%= link_to "#", 
                class: "flex items-center p-2 gap-3 rounded-lg #{current_page?('#') ? 'text-green-600 bg-green-50 dark:bg-green-900/10 dark:text-green-500' : 'text-gray-900 dark:text-white hover:bg-green-50 dark:hover:bg-green-900/10 hover:text-green-600 dark:hover:text-green-500'} group" do %>
               <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" 
                    class="shrink-0 w-5 h-5 transition duration-75 #{current_page?('#') ? 'text-green-600 dark:text-green-500' : 'text-gray-500 dark:text-gray-400 group-hover:text-green-600 dark:group-hover:text-green-500'}">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
               </svg>
               Drafts
            <% end %>
         </li>
         <li>
            <%= link_to bible_verses_path, 
                class: "flex items-center p-2 gap-3 rounded-lg #{current_page?(bible_verses_path) ? 'text-green-600 bg-green-50 dark:bg-green-900/10 dark:text-green-500' : 'text-gray-900 dark:text-white hover:bg-green-50 dark:hover:bg-green-900/10 hover:text-green-600 dark:hover:text-green-500'} group" do %>
               <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="shrink-0 w-5 h-5 transition duration-75 #{current_page?(bible_verses_path) ? 'text-green-600 dark:text-green-500' : 'text-gray-500 dark:text-gray-400 group-hover:text-green-600 dark:group-hover:text-green-500'}">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25" />
               </svg>
               Bible
            <% end %>
         </li>
         <li>
            <%= link_to bible_chat_conversations_path, 
               class: "flex items-center p-2 gap-3 rounded-lg #{controller_name == 'bible_chat_conversations' || controller_name == 'bible_chats' ? 'text-green-600 bg-green-50 dark:bg-green-900/10 dark:text-green-500' : 'text-gray-900 dark:text-white hover:bg-green-50 dark:hover:bg-green-900/10 hover:text-green-600 dark:hover:text-green-500'} group",
               data: { 
                  action: "click->sidebar#toggleConversations",
                  sidebar_target: "chatLink" 
               } do %>
               <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="shrink-0 w-5 h-5 transition duration-75 #{controller_name == 'bible_chat_conversations' || controller_name == 'bible_chats' ? 'text-green-600 dark:text-green-500' : 'text-gray-500 dark:text-gray-400 group-hover:text-green-600 dark:group-hover:text-green-500'}">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 8.511c.884.284 1.5 1.128 1.5 2.097v4.286c0 1.136-.847 2.1-1.98 2.193-.34.027-.68.052-1.02.072v3.091l-3-3c-1.354 0-2.694-.055-4.02-.163a2.115 2.115 0 0 1-.825-.242m9.345-8.334a2.126 2.126 0 0 0-.476-.095 48.64 48.64 0 0 0-8.048 0c-1.131.094-1.976 1.057-1.976 2.192v4.286c0 .837.46 1.58 1.155 1.951m9.345-8.334V6.637c0-1.621-1.152-3.026-2.76-3.235A48.455 48.455 0 0 0 11.25 3c-2.115 0-4.198.137-6.24.402-1.608.209-2.76 1.614-2.76 3.235v6.226c0 1.621 1.152 3.026 2.76 3.235.577.075 1.157.14 1.74.194V21l4.155-4.155" />
               </svg>
               Chat with Bible
            <% end %>
            
            <!-- Conversations List - Collapsible Section -->
            <% if current_user %>
               <div id="bible-chat-conversations" 
                  class="mt-1 ml-7 overflow-y-auto transition-all duration-300 max-h-0"
                  data-sidebar-target="conversationsPanel">
                  
                  <!-- New Chat Button -->
                  <div class="mb-2">
                     <%= link_to bible_chat_conversations_path(translation: @translation || "KJV"), 
                        class: "w-full flex items-center p-2 text-sm text-gray-700 dark:text-gray-200 hover:bg-green-50 dark:hover:bg-green-900/10 rounded-lg group cursor-pointer" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
                           <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                        </svg>
                        New Chat
                     <% end %>
                  </div>
                  
                  <!-- Render the conversation list partial -->
                  <%= render "bible_chat_conversations/conversation_list", 
                     conversations: @conversations || [], 
                     current_conversation: @conversation, 
                     translation: @translation %>
                  
               </div>
            <% end %>
         </li>
      </ul>
      
      <!-- Subscription Plan Placeholder -->
      <div class="mt-auto pt-4 p-3 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 shadow-sm">
        <div class="flex items-center justify-between mb-2">
          <h5 class="text-sm font-medium text-gray-900 dark:text-white">Your Plan</h5>
          <%= link_to "#", class: "text-xs text-green-600 dark:text-green-400 hover:underline" do %>
            Upgrade
          <% end %>
        </div>
        
        <div class="flex items-center gap-3">
          <div class="p-2 bg-green-100 dark:bg-green-900/30 rounded-full">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-green-600 dark:text-green-400">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
          </div>
          
          <div>
            <p class="text-sm font-medium text-gray-900 dark:text-white">Free Plan</p>
            <p class="text-xs text-gray-500 dark:text-gray-400">Basic features</p>
          </div>
        </div>
      </div>
   </div>
</aside>