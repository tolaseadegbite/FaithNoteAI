<div class="">
  <%= form_with(model: category, class: "w-full") do |form| %>
    <%= render 'shared/errors', form: form %>

    <div class="mb-5">
      <%= form.label :name, class: "block text-sm font-semibold" %>
      <%= form.text_field :name, placeholder: "Name of category", class: ["mt-2 text-sm w-full px-3 p-2.5 border rounded-md dark:bg-[#121212] dark:text-gray-100 border-gray-300 dark:border-[#121212] text-gray-700", {"": category.errors[:name].none?, "border-red-400 focus:outline-red-600": category.errors[:name].any?}] %>
    </div>

    <div>
        <%= form.submit class: "px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 cursor-pointer" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5m-13.5-9L12 3m0 0 4.5 4.5M12 3v13.5" />
          </svg>
          Save
        <% end %>
      </div>
    <% end %>
</div>