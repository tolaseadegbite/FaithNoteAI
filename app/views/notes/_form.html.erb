<div class="p-5">
  <%= form_with(model: note, class: "w-full") do |form| %>
    <%= render 'shared/errors', form: form %>

    <div class="mb-5">
      <%= form.label :title, class: "block text-sm font-semibold" %>
      <%= form.text_field :title, placeholder: "Title of the sermon, workshop, lecture, etc.", class: ["mt-2 text-sm w-full px-3 p-2.5 border rounded-md dark:text-gray-100 border-gray-300 dark:border-gray-700 dark:focus:border-green-400 dark:focus:ring-green-400 text-gray-700", {"": note.errors[:title].none?, "border-red-400 focus:outline-red-600": note.errors[:title].any?}] %>
    </div>

    <div class="mb-5">
      <%= form.label :transcription, class: "block text-sm font-semibold mb-2" %>
      <%= form.rich_text_area :transcription, rows: 10, placeholder: "Description", class: ["text-sm h-100 mt-2 h-24 mt-2 w-full px-3 p-2.5 border rounded-md dark:text-gray-100 border-gray-300 dark:border-gray-700 dark:focus:border-green-400 dark:focus:ring-green-400 text-gray-700", {"": note.errors[:transcription].none?, "border-red-400 focus:outline-red-600": note.errors[:transcription].any?}] %>
    </div>

    <div class="mb-5">
      <div class="flex items-center justify-between mb-1">
        <span>
          <%= form.label "Summary (Bullet points)", class: "block text-sm font-semibold" %>
        </span>
      </div>
      <%= form.rich_text_area :summary, rows: 4, placeholder: "Summary", class: ["h-50 text-sm mt-2 h-24 mt-2 w-full px-3 p-2.5 border rounded-md dark:text-gray-100 border-gray-300 dark:border-gray-700 dark:focus:border-green-400 dark:focus:ring-green-400 text-gray-700", {"": note.errors[:summary].none?, "border-red-400 focus:outline-red-600": note.errors[:summary].any?}] %>

      <div class="block space-y-2 md:space-y-0 md:flex items-center gap-2 mt-5">
        <div>
          <%= link_to root_path, class: "w-full md:w-auto flex gap-1 items-center justify-center border border-yellow-700 bg-yellow-700 text-sm text-white hover:bg-yellow-800 py-2 px-4 rounded cursor-pointer" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904 9 18.75l-.813-2.846a4.5 4.5 0 0 0-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 0 0 3.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 0 0 3.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 0 0-3.09 3.09ZM18.259 8.715 18 9.75l-.259-1.035a3.375 3.375 0 0 0-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 0 0 2.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 0 0 2.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 0 0-2.456 2.456ZM16.894 20.567 16.5 21.75l-.394-1.183a2.25 2.25 0 0 0-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 0 0 1.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 0 0 1.423 1.423l1.183.394-1.183.394a2.25 2.25 0 0 0-1.423 1.423Z" />
            </svg>
            AI summary
          <% end %>
        </div>
        <div>
          <%= link_to root_path, class: "w-full md:w-auto flex gap-1 items-center justify-center border border-blue-700 bg-blue-700 text-sm text-white hover:bg-blue-800 py-2 px-4 rounded cursor-pointer" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 7.5V6.108c0-1.135.845-2.098 1.976-2.192.373-.03.748-.057 1.123-.08M15.75 18H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08M15.75 18.75v-1.875a3.375 3.375 0 0 0-3.375-3.375h-1.5a1.125 1.125 0 0 1-1.125-1.125v-1.5A3.375 3.375 0 0 0 6.375 7.5H5.25m11.9-3.664A2.251 2.251 0 0 0 15 2.25h-1.5a2.251 2.251 0 0 0-2.15 1.586m5.8 0c.065.21.1.433.1.664v.75h-6V4.5c0-.231.035-.454.1-.664M6.75 7.5H4.875c-.621 0-1.125.504-1.125 1.125v12c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V16.5a9 9 0 0 0-9-9Z" />
            </svg>
            Copy summary
          <% end %>
        </div>
        <div>
          <%= link_to root_path, class: "w-full md:w-auto flex gap-1 items-center justify-center border border-blue-700 bg-blue-700 text-sm text-white hover:bg-blue-800 py-2 px-4 rounded cursor-pointer" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 3.75V16.5L12 14.25 7.5 16.5V3.75m9 0H18A2.25 2.25 0 0 1 20.25 6v12A2.25 2.25 0 0 1 18 20.25H6A2.25 2.25 0 0 1 3.75 18V6A2.25 2.25 0 0 1 6 3.75h1.5m9 0h-9" />
            </svg>
            Save version
          <% end %>
        </div>
      </div>
    </div>

    <div class="flex justify-end">
      <%= form.submit "Upload", class: "w-full md:w-auto bg-green-700 hover:bg-green-800 text-white py-2 px-4 rounded cursor-pointer" %>
    </div>
  <% end %>
</div>
