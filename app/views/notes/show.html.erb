<% content_for :title, sanitize(@note.title) %>

<div class="max-w-screen-lg mx-auto text-gray-800 dark:text-white space-y-5 p-4">
    <h1 class="font-bold text-xl"><%= @note.title %></h1>
    <%= render 'notes/components/note_meta', note: @note %>
    <p class="text-sm">
        <%= sanitize(@note.transcription) %>
    </p>

    <% if @note.summary.present? %>
        <h1 class="font-bold text-xl">Summary</h1>
        <p class="text-sm">
            <%= sanitize(@note.summary) %>
        </p>
    <% end %>
</div>