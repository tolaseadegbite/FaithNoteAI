<% if note.audio_file.attached? %>
  <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-4 mb-4">
    <div class="flex items-center justify-between mb-3">
      <h3 class="text-lg font-medium text-gray-800 dark:text-white">Audio Recording</h3>
      <span class="text-sm text-gray-500 dark:text-gray-400">
        <%= number_to_human_size(note.audio_file.byte_size) %>
      </span>
    </div>
    
    <audio controls class="w-full focus:outline-none">
      <source src="<%= rails_blob_path(note.audio_file) %>" type="audio/mpeg">
      Your browser does not support the audio element.
    </audio>
  </div>
<% end %>