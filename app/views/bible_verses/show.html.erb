<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "← Back to #{@verse.book} #{@verse.chapter}", 
                bible_chapter_path(book: @verse.book, chapter: @verse.chapter), 
                class: "text-blue-500 hover:underline" %>
  </div>
  
  <div class="bg-white rounded-lg shadow p-6">
    <h1 class="text-2xl font-bold mb-4"><%= @verse.reference %></h1>
    
    <div class="text-xl mb-6">
      <%= @verse.content %>
    </div>
    
    <div class="flex justify-between">
      <div>
        <% prev_verse = BibleVerse.where(book: @verse.book, chapter: @verse.chapter, verse: @verse.verse - 1).first %>
        <% if prev_verse %>
          <%= link_to "← Previous Verse", 
                      bible_verse_path(book: prev_verse.book, chapter: prev_verse.chapter, verse: prev_verse.verse),
                      class: "text-blue-500 hover:underline" %>
        <% elsif @verse.verse == 1 && @verse.chapter > 1 %>
          <% last_verse_of_prev_chapter = BibleVerse.where(book: @verse.book, chapter: @verse.chapter - 1)
                                                   .order(verse: :desc).first %>
          <% if last_verse_of_prev_chapter %>
            <%= link_to "← Previous Chapter", 
                        bible_verse_path(book: last_verse_of_prev_chapter.book, 
                                        chapter: last_verse_of_prev_chapter.chapter, 
                                        verse: last_verse_of_prev_chapter.verse),
                        class: "text-blue-500 hover:underline" %>
          <% end %>
        <% end %>
      </div>
      
      <button onclick="copyVerse('<%= @verse.reference %>', '<%= @verse.content %>')" 
              class="px-3 py-1 bg-gray-200 hover:bg-gray-300 rounded flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" />
        </svg>
        Copy
      </button>
      
      <div>
        <% next_verse = BibleVerse.where(book: @verse.book, chapter: @verse.chapter, verse: @verse.verse + 1).first %>
        <% if next_verse %>
          <%= link_to "Next Verse →", 
                      bible_verse_path(book: next_verse.book, chapter: next_verse.chapter, verse: next_verse.verse),
                      class: "text-blue-500 hover:underline" %>
        <% else %>
          <% first_verse_of_next_chapter = BibleVerse.where(book: @verse.book, chapter: @verse.chapter + 1, verse: 1).first %>
          <% if first_verse_of_next_chapter %>
            <%= link_to "Next Chapter →", 
                        bible_verse_path(book: first_verse_of_next_chapter.book, 
                                        chapter: first_verse_of_next_chapter.chapter, 
                                        verse: first_verse_of_next_chapter.verse),
                        class: "text-blue-500 hover:underline" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

