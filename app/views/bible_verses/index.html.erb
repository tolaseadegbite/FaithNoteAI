<% content_for :title, "Bible" %>

<div class="max-w-screen-lg mx-auto">
  <div class="py-4 px-4">
    <h1 class="font-bold text-xl text-gray-800 dark:text-white">Bible</h1>
  </div>
  
  <div class="px-4 mb-6">
    <div data-controller="bible-search">
      <%= form_with url: search_bible_verses_path, method: :get, class: "flex" do |f| %>
        <%= f.text_field :q, 
                        placeholder: "Search by reference (e.g., John 3:16) or text", 
                        data: { bible_search_target: "input", action: "input->bible-search#checkReference" },
                        class: "flex-grow px-4 py-2 border rounded-l border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-green-500 dark:bg-gray-800 dark:text-white" %>
        <%= f.button type: "submit", class: "bg-green-600 hover:bg-green-700 dark:bg-green-700 dark:hover:bg-green-800 text-white px-4 py-2 rounded-r cursor-pointer" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        <% end %>
      <% end %>
    </div>
  </div>
  
  <div class="px-4">
    <div class="grid md:grid-cols-2 gap-8">
      <div>
        <h2 class="text-lg font-semibold mb-4 text-gray-800 dark:text-white">Old Testament</h2>
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-3">
          <% @old_testament_books.each do |book| %>
            <%= link_to book, bible_chapter_path(book: book, chapter: 1), 
                      class: "block p-3 bg-white dark:bg-gray-800 hover:bg-green-50 dark:hover:bg-green-900/10 border border-gray-200 dark:border-gray-700 rounded-lg text-center text-gray-800 dark:text-white hover:text-green-600 dark:hover:text-green-500 transition-colors" %>
          <% end %>
        </div>
      </div>
      
      <div>
        <h2 class="text-lg font-semibold mb-4 text-gray-800 dark:text-white">New Testament</h2>
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-3">
          <% @new_testament_books.each do |book| %>
            <%= link_to book, bible_chapter_path(book: book, chapter: 1), 
                      class: "block p-3 bg-white dark:bg-gray-800 hover:bg-green-50 dark:hover:bg-green-900/10 border border-gray-200 dark:border-gray-700 rounded-lg text-center text-gray-800 dark:text-white hover:text-green-600 dark:hover:text-green-500 transition-colors" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>