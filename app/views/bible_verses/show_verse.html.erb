<turbo-frame id="verse_viewer">
  <div class="p-4">
    <h2 class="text-xl font-bold mb-4 text-gray-900 dark:text-white">
      <%= @verse_end ? "#{@book} #{@chapter}:#{@verse_start}-#{@verse_end}" : "#{@book} #{@chapter}:#{@verse_start}" %>
      <span class="text-sm font-normal text-gray-500 dark:text-gray-400">(<%= @translation %>)</span>
    </h2>
    
    <div class="space-y-4">
      <% if @verse_end %>
        <% @verses.each_with_index do |verse, index| %>
          <div class="verse-item" id="verse-<%= @verse_start + index %>" data-controller="bible-verse">
            <div class="flex">
              <span class="text-gray-500 dark:text-gray-400 mr-2 font-medium"><%= @verse_start + index %></span>
              <div class="verse-content" data-bible-verse-target="content"><%= verse.content %></div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="verse-item" id="verse-<%= @verse_start %>" data-controller="bible-verse">
          <div class="flex">
            <span class="text-gray-500 dark:text-gray-400 mr-2 font-medium"><%= @verse_start %></span>
            <div class="verse-content" data-bible-verse-target="content"><%= @verse.content %></div>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="mt-6 flex justify-between items-center">
      <a href="/bible/<%= @book %>/<%= @chapter %>" class="text-green-600 dark:text-green-400 hover:underline">
        View Chapter
      </a>
      <button type="button" 
              data-controller="bible-verse" 
              data-action="bible-verse#copy" 
              class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" />
        </svg>
        Copy
      </button>
    </div>
  </div>
</turbo-frame>